<ion-view view-title="Pupilpod">
	<ion-content>
		<div ng-show="!loading">
			<div class="item item-divider item-text-wrap" ng-bind="publication_details.name"></div>
			<div class="card" ng-if="publication_details.description.length > 0">
                <div class="item item-text-wrap">
                    <span ng-bind-html="publication_details.description" />
                </div>
            </div>
			<div ng-if="publication_attachments.length > 0" style="margin-left: 30px;">
                <small>Please click on the attachments to read further</small>
            </div>
			<div class="card" ng-repeat="item in publication_attachments">
				<div class="row row-center">
					<div class="col col-80">{{item.attach_fileName}}</div>
					<div class="col col-20">
						<button ng-click="downloadAttachment(item.attach_path)" class="button button-clear button-dark icon icon-right ion-paperclip" style="width:100%;"></button>
					</div>
				</div>
			</div>
		</div>
       <div ng-show="loading">
			<div style="text-align:center;">
				<ion-spinner icon="ripple" class="spinner-balanced"></ion-spinner>
			</div>
		</div>
    </ion-content>
</ion-view>


