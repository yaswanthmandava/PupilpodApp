<ion-view view-title="Pupilpod">
    <ion-content>
		<div ng-show="!loading">
			<div class="item item-divider">
				{{event.name}}
			</div>
			<div class="item item-text-wrap">
				<div class="row">
					<div style="width:50%;border-right:solid 2px #EFEFEF;">Event details</div>
					<div class="text-right" style="width:50%;">{{event.details}}</div>
				</div>
			</div>
			<div class="item item-text-wrap">
				<div class="row">
					<div style="width:50%;border-right:solid 2px #EFEFEF;">Event category</div>
					<div class="text-right" style="width:50%;">{{event.category}}</div>
				</div>
			</div>
			<div class="item item-text-wrap">
				<div class="row">
					<div style="width:50%;border-right:solid 2px #EFEFEF;">Start date</div>
					<div class="text-right" style="width:50%;">{{event.start_date}}</div>
				</div>
			</div>
			<div class="item item-text-wrap">
				<div class="row">
					<div style="width:50%;border-right:solid 2px #EFEFEF;">Start time</div>
					<div class="text-right" style="width:50%;">{{event.start_time}}</div>
				</div>
			</div>
			<div class="item item-text-wrap">
				<div class="row">
					<div style="width:50%;border-right:solid 2px #EFEFEF;">End date</div>
					<div class="text-right" style="width:50%;">{{event.end_date}}</div>
				</div>
			</div>
			<div class="item item-text-wrap">
				<div class="row">
					<div style="width:50%;border-right:solid 2px #EFEFEF;">End time</div>
					<div class="text-right" style="width:50%;">{{event.end_time}}</div>
				</div>
			</div>
        </div>
        <div ng-show="loading" style="margin-top: 150px;">
            <div style="text-align:center;">
                <ion-spinner icon="ripple" class="spinner-balanced"></ion-spinner>
            </div>
        </div>
    </ion-content>
</ion-view>